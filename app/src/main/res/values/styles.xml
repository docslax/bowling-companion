<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primaryWhiteText</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/primaryBlackText</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorError">@color/dangerRed</item>
        <item name="colorOnError">@color/primaryWhiteText</item>
        <item name="colorSurface">@color/primaryWashedOut</item>
        <item name="colorOnSurface">@color/primaryBlackText</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/primaryBlackText</item>

        <item name="preferenceTheme">@style/SettingTheme</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Toolbars -->

    <style name="Toolbar" parent="AppTheme">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:elevation">@dimen/base_elevation</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- Basic Components -->

    <style name="BaseContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">@dimen/base_margin</item>
        <item name="android:paddingBottom">@dimen/base_margin</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <style name="VerticalDivider" parent="HorizontalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
        <item name="android:layout_marginRight">@dimen/base_margin</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Tab Layout -->

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">@dimen/base_elevation</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/secondaryWhiteText</item>
        <item name="tabSelectedTextColor">@color/primaryWhiteText</item>
        <item name="tabIndicatorColor">@color/primaryWhiteText</item>
    </style>

    <style name="ViewPager">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Dialog -->

    <style name="Dialog">
        <item name="android:theme">@style/AppTheme.NoBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/primaryWhiteText</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
        <item name="android:layout_marginRight">@dimen/base_margin_large</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <style name="DeleteButton" parent="@style/PrimaryButton">
        <item name="android:background">@drawable/delete_button</item>
        <item name="android:textColor">@color/primaryWhiteText</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Radio Buttons & CheckBoxes -->

    <style name="RadioButton">
        <item name="android:buttonTint">@color/secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
        <item name="android:layout_marginRight">@dimen/base_margin_large</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
        <item name="android:layout_marginRight">@dimen/base_margin_large</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <!-- Progress Bar -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
        <item name="android:layout_marginRight">@dimen/base_margin_large</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <!-- Images -->

    <style name="ListItemIcon">
        <item name="android:layout_width">@dimen/list_default_icon_size</item>
        <item name="android:layout_height">@dimen/list_default_icon_size</item>
        <item name="android:layout_marginTop">@dimen/list_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_item_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:alpha">0.7</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="GameFooterIcon">
        <item name="android:layout_width">@dimen/base_icon_size</item>
        <item name="android:layout_height">@dimen/base_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/base_margin_small</item>
        <item name="android:layout_marginTop">@dimen/base_margin_small</item>
        <item name="android:scaleType">centerInside</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Text -->

    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryBlackText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
    </style>

    <style name="HeaderTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryBlackText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
    </style>

    <style name="SubHeaderText" parent="HeaderText">
        <item name="android:textSize">@dimen/text_subheader</item>
    </style>

    <style name="SubHeaderTextInput" parent="HeaderTextInput">
        <item name="android:textSize">@dimen/text_subheader</item>
    </style>

    <style name="BodyText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryBlackText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
    </style>

    <style name="PaddedTextInputEditText">
        <item name="android:paddingLeft">@dimen/text_margin_horizontal</item>
        <item name="android:paddingStart">@dimen/text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/text_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/text_margin_horizontal</item>
    </style>

    <style name="BodyTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryBlackText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
    </style>

    <style name="FrameText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryBlackText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/base_margin</item>
    </style>

    <style name="FrameFoulText" parent="FrameText">
        <item name="android:textColor">@color/secondaryBlackText</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/base_margin_small</item>
    </style>

    <style name="FrameNumberText" parent="FrameText">
        <item name="android:textColor">@color/primaryWhiteText</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/base_margin_tiny</item>
    </style>

    <style name="ListItemBodyText" parent="BodyText">
        <item name="android:layout_marginTop">@dimen/list_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_item_margin</item>
        <item name="android:layout_marginRight">@dimen/list_item_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">@dimen/text_list_item</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="StatisticListItemBodyText" parent="ListItemBodyText">
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingTop">@dimen/list_item_margin</item>
        <item name="android:paddingBottom">@dimen/list_item_margin</item>
        <item name="android:paddingLeft">@dimen/list_item_margin</item>
        <item name="android:paddingRight">@dimen/list_item_margin</item>
    </style>

    <style name="ListItemDetailText" parent="ListItemBodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="PinButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/pin_background</item>
        <item name="android:paddingLeft">@dimen/base_margin_small</item>
        <item name="android:paddingRight">@dimen/base_margin_small</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/pin_enabled</item>
    </style>

    <!-- Views -->

    <style name="EmptyView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Separators -->

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Separator.Inset.Left" parent="Separator">
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
    </style>

    <style name="Separator.Inset.Both" parent="Separator">
        <item name="android:layout_marginLeft">@dimen/base_margin_large</item>
        <item name="android:layout_marginRight">@dimen/base_margin_large</item>
    </style>

    <!-- Settings -->

    <style name="SettingTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorAccent">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/primaryBlackText</item>
        <item name="android:textColorSecondary">@color/secondaryBlackText</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
